{
  "rootDir": "../",
  "roots": [
    "<rootDir>/"
  ],
  "collectCoverageFrom": [
    "src/components/*.js"
  ],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/mocks/fileMock.js",
    "\\.(css|less|scss)$": "<rootDir>/jest/mocks/styleMock.js"
  },
  "setupFiles": [
    "<rootDir>/jest/setup/enzyme.js"
  ],
  "coverageDirectory": "<rootDir>/reports/jestCoverage",
  "coverageReporters": [
    "html"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleFileExtensions": [
    "js",
    "json"
  ],
  "testMatch": [
    "**/*.test.js"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "transformIgnorePatterns": [
    "[/\\\\]node_modules[/\\\\].+\\.js$"
  ],
  "snapshotSerializers": [
    "<rootDir>/node_modules/enzyme-to-json/serializer"
  ]
}
